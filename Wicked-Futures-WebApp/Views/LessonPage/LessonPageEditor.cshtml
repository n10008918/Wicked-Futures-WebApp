@model LessonPage
@{
    ViewBag.Title = "Page Editor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1>@Model.LessonPageTitle</h1>
        </div>
    </div>

    @using(Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="row">
            <div class="col">
                @Html.LabelFor(m => m.LessonPageTitle)
                @Html.TextBoxFor(m => m.LessonPageTitle, new { htmlAttributes = new { @class = "form-control" } }) 
                @Html.ValidationMessageFor(m => m.LessonPageTitle, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Html.LabelFor(m => m.LessonMediaType)
                @Html.DropDownListFor(m => m.LessonMediaType, LessonPage.GetLessonMediaTypesList(), new { htmlAttributes = new { @class = "form-control" } }) 
                @Html.ValidationMessageFor(m => m.LessonMediaType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Html.LabelFor(m => m.LessonPageMediaEmbed)
                @Html.TextBoxFor(m => m.LessonPageMediaEmbed, new { htmlAttributes = new { @class = "form-control" } }) 
                @Html.ValidationMessageFor(m => m.LessonPageMediaEmbed, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Html.LabelFor(m => m.LessonPageDescription)
                @Html.TextAreaFor(m => m.LessonPageDescription, new { htmlAttributes = new { @class = "form-control" } }) 
                @Html.ValidationMessageFor(m => m.LessonPageDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col">
                <input class="btn-primary btn-default" type="submit" value="Save">
            </div>
        </div>
    }
</div>