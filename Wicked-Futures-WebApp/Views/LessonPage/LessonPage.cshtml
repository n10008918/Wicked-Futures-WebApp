@model LessonPage
@{
    ViewBag.Title = Model.LessonPageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1>@Model.LessonPageTitle</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            @if(Model.LessonMediaType == LessonMediaType.Image)
            {
                <img src="@Model.LessonPageMediaEmbed">
            }
            else if(Model.LessonMediaType == LessonMediaType.MultiChoiceQuiz)
            {
                <span>Coming soon...</span>
            }
            else if(Model.LessonMediaType == LessonMediaType.PDF)
            {
                <embed src="@Model.LessonPageMediaEmbed" type="application/pdf" style="width: 100%; height: 400px" >       
            }
            else if(Model.LessonMediaType == LessonMediaType.Video)
            {
                <div style="padding:56.25% 0 0 0;position:relative;">
                    <iframe src="https://player.vimeo.com/video/@(Model.LessonPageMediaEmbed)?title=0&byline=0&portrait=0" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
                </div>
                <script src="https://player.vimeo.com/api/player.js"></script>
            }
            else if(Model.LessonMediaType == LessonMediaType.TextOnly){ <!--Render nothing--> }
            else
            {
                <span>Unsupported page type</span>
            }
        </div>
    </div>
    <div class="row">
        <div class="col">
            @Model.LessonPageDescription
        </div>
    </div>
</div>
